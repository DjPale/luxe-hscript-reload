{

  project : {
    name : 'luxe hscript live reload demo',
    version : '0.0.1',
    author : 'dj_pale',

    app : {
      name : 'luxe-hscript-reload',
      package : 'com.djpale.luxe.hscriptreload',
      codepaths : ['src', 'lib/hscript', 'assets/scripts']
    },

    build : {
      dependencies : {
        luxe : '*',
        delta : '*',
        hscript: '*'
      },
      defines : ['hscriptPos'],
      flags: ['-dce no']
    },

    files : {
      assets : 'assets/'
    }

  }

}
